rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAllowlisted() {
      return exists(/databases/$(database)/documents/allowlist/$(request.auth.uid));
    }

    // Rooms: read-only, only if signed in + allowlisted. No client writes.
    match /rooms/{roomId} {
      allow read: if isSignedIn() && isAllowlisted();
      allow write: if false;
    }

    // Allowlist: readable only by the same authed uid. No client writes.
    match /allowlist/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if false;
    }

    // Per-user game state: readable/writable by the same authed user AND allowlisted.
    match /gameState/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid && isAllowlisted();
    }

    // Deny everything else by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
