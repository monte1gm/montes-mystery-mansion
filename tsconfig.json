{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "jsx": "preserve",
    "types": ["vite/client", "node"]
  },
  "include": ["src", "scripts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
